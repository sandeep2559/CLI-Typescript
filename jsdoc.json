{
    "source": {
        "include": [
            "src"
        ],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default":{
            "outputSourceFiles": false
        }
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/",
        "readme": "./readme/readme.md"
    }
}